.keyboard
  position relative
  height 10em
  width 32em
  margin-bottom 1em
  display inline-block
  vertical-align top
  .keyboard__key
    display inline-block
    width 2em
    background-color #fff
    height 10em
    border 0.1em solid black
    position relative
    vertical-align bottom
    box-shadow 0 0.1em 0.1em rgba(0,0,0,0.4);
    user-select none
    span
      color #ccc
      position absolute
      bottom 2em
      left 0.6em
      font-size 0.75em
      cursor default
  .keyboard__key--active
    height calc(100% - 0.1em)
    bottom 0.1em
    box-shadow: inset 0 0.05em 0.3em 0.05em rgba(0,0,0,0.5);
  .keyboard__key--black
    width 1em
    background-color #000
    height 5em
    position absolute
    top 0px
    left -0.6em
    border-bottom 0.5em solid #555
    &.keyboard__key--active
      height 5.3em
      border-bottom 0.3em solid #555
