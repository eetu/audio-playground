slider-size = 12em
track-width = 0.8em
border-size = 0.25em
input-width = 4em
input-height = 1.75em
controller-color-border = #305a64
controller-color = #70d2e8

.range-slider
  display inline-block
  .range-slider__slider
    -webkit-appearance: none;
    -webkit-transform translate(-4em, 0) rotate(-90deg);
    width slider-size
    height slider-size
    &:focus
      outline none
    &::-webkit-slider-thumb
      -webkit-appearance none
      border border-size solid controller-color-border
      height (input-width / 2)
      width (input-width / 2)
      border-radius 50%
      background-color controller-color
      margin-top: -(track-width)
    &::-webkit-slider-runnable-track
      height track-width
      background-color #fff
      border border-size solid controller-color-border
      border-radius 0.5em
  .range-slider__input
    width input-width
    height input-height
    text-align center
    border 1px solid controller-color-border
    font-weight bold
    background-color controller-color
    color #fff
